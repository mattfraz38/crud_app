<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "row g-3") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username, class: "form-label" %><br />
      <%= f.text_field :username, autofocus: false, autocomplete: 'off', class: "col-md-12" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: false, autocomplete: 'off', class: "col-md-12" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: 'off', class: "col-md-12" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-12" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "col-md-12 btn btn-primary"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>