<% provide(:title, "#{@user.username}") %>

<h1>Show</h1>

<p><%= @user.username %></p>

<%= link_to 'All Articles', articles_path %> |
<%= link_to 'All Users', users_path %>

<% if @user == current_user %>
  <%= render 'shared/article_form' %>
<% end %>

<% @user.articles.each do |article| %>
  <h2><%= article.title %></h2>
  <p><%= article.content %></p>
  <small><%= article.created_at %></small>
<% end %>