<% provide(:title, 'Articles') %>

<div class="text-center mb-5">
  <h1>CRUD Articles</h1>
</div>

<div class="mb-5">
<%= form_with url: "/articles_search" , method: :get, local: true do |f| %>
  <div class="d-flex flex-row justify-content-center">
    <div class="w-50 me-1">
      <%= f.text_field :query, class: "form-control", placeholder: "Search..." %>
    </div>
    <%= f.submit "Search", class: "btn btn-primary" %>
  </div>
<% end %>  
</div>

<% @articles.each do |article| %>
<div class="articles py-3 px-3 mb-3">
  <div class="text-center">
    <%= link_to article.title.truncate(50), article_path(article) %>
  </div>

  <hr>

  <div>
    <%= article.content.truncate(300) %>
  </div>

  <hr>

  <div class="text-center">
    <small><%= link_to article.user.username, user_path(article.user) %> | <%= article.created_at.strftime("%B %e, %Y") %></small>  
  </div>
</div>
<% end %>