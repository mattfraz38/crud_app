<div class="sign-in pt-3 pb-3">
  <div class="text-center">
    <h2>Log in</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "row") do |f| %>
    <div class="field mb-3">
      <%= f.label :email, class: "col-10 offset-1 col-md-6 offset-md-3" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-10 offset-1 col-md-6 offset-md-3" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: "col-10 offset-1 col-md-6 offset-md-3" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "col-10 offset-1 col-md-6 offset-md-3" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field offset-1 offset-md-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "col-10 offset-1 col-md-6 offset-md-3 btn btn-primary" %>
    </div>

    <div class="col-10 offset-1 col-md-6 offset-md-3">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>